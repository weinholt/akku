           ("industria" "^2.1.0")
           ("spells" "~0.0.0-akku")
           ("semver" "^1.0.4")
           ("spdx" "^1.0.0")
           ("wak-fmt" "~0.8.0-akku")
           ("wak-riastreams" "~0.0.0-akku")
           ("wak-foof-loop" "~0.0.0-akku")
           ("wak-wt-tree" "~0.0.0-akku")
           ("hashing" "^1.1.0")
           ("compression" "^0.1.2")
           ("laesare" "^1.0.0")
